source 'https://rubygems.org'

# include the sinatra DSL
gem 'sinatra', :require => 'sinatra/base'
gem 'sinatra-contrib'
gem 'pry-remote'

# bcrypt for password hashing
gem 'bcrypt'

# use the sinatra-subdomain gem to address api calls
gem 'sinatra-subdomain'
# for XHR requests on the api
gem 'sinatra-cross_origin', '~> 0.3.1' , :require => 'sinatra/cross_origin'
# use the jsonify gem to clean up the JSON responses for angular
gem 'jsonify', :require => 'jsonify/tilt'
# use jwt (tokens) instead of cookies
gem 'jwt'

# use haml for templates
gem 'haml'

# use stylus for styling
gem 'stylus', :require => 'stylus/tilt'

# use Mongo for the database
gem 'mongoid', '~> 3.1.6'

# required for mongo json output
gem 'bson_ext'

# Server
gem 'thin'
