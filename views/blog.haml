!!! 5
%html
  %head
    %meta{charset:'utf-8'}
    %meta{name:'viewport', content:'width=device-width'}
    %title in the key of E | a blog by Evan Pavlica
    %script{src:'/javascript/angular.min.js'}
    %script{src:"/javascript/angular-resource.min.js"}
    %script{src:"/javascript/angular-cookies.min.js"}
    %script{src:"/javascript/angular-sanitize.min.js"}
    %script{src:"/javascript/angular-route.min.js"}
    %script{src:"/javascript/markdown.min.js"}
    %script{src:"/angular/app.js"}
    %script{src:"/angular/controllers/posts-controller.js"}
    %script{src:"/angular/controllers/users-controller.js"}
    %script{src:"/angular/services/post.js"}
    %link{href:'http://fonts.googleapis.com/css?family=Exo+2:400,300,700,400italic,300italic,900|Over+the+Rainbow', rel:'stylesheet', type:'text/css'}
    %link{href:'//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css', rel:'stylesheet'}
    %link{rel:'stylesheet', href:'/styles/normalize.css'}
    %link{rel:'stylesheet', href:'/css/keyms.css', type:'text/css'}
  %body(ng-app='keymsApp')
    .keyms-nav(ng-controller='UsersController')
      .keyms-title
        %a{href:'/blog#/'} {{ post.category }} in the Key of E
      %form(ng-submit='login()' ng-show='!token')
        %input(type='text' ng-model='user.email' placeholder='email')
        %input(type='password' ng-model='user.password' placeholder='Password')
        %input(type='submit' value='Login')
      .greeting(ng-show='token')
        Hello, {{ name }}!
        %button(ng-click='logout()') Logout
    .container(ng-view='')

